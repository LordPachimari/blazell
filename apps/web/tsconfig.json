{
	"extends": "@blazell/tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		},
		"lib": ["DOM", "DOM.Iterable", "ES2022"],

		// Remix takes care of building everything in `remix build`.
